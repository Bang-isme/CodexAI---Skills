# ============================================
# ENVIRONMENT TEMPLATE - Copy to .env and fill values
# ============================================

# --- Server ---
PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# --- MongoDB ---
MONGO_URI=mongodb://admin:CHANGE_ME@localhost:27017/appdb?authSource=admin

# --- PostgreSQL/MySQL ---
PG_URI=postgres://admin:CHANGE_ME@localhost:5432/appdb
# Or MySQL: mysql://admin:CHANGE_ME@localhost:3306/appdb

# --- Redis ---
REDIS_URL=redis://:CHANGE_ME@localhost:6379

# --- Authentication ---
JWT_SECRET=CHANGE_ME_use_openssl_rand_base64_32
JWT_REFRESH_SECRET=CHANGE_ME_different_from_jwt_secret
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=7d
BCRYPT_ROUNDS=12

# --- Rate Limiting ---
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# --- Logging ---
LOG_LEVEL=debug

# --- Email (Optional) ---
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# --- Error Tracking (Optional) ---
SENTRY_DSN=

# --- File Upload (Optional) ---
UPLOAD_MAX_SIZE_MB=10
UPLOAD_DIR=./uploads

# ============================================
# SECURITY RULES:
# 1. NEVER commit .env to git
# 2. Keep .env.example in repo (no real values)
# 3. Use different secrets per environment
# 4. Rotate secrets periodically
# ============================================
